<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="11.0" ExtensionBundleId="com.timo.aeinpaint" ExtensionBundleVersion="1.0.0"
    ExtensionBundleName="AE Inpaint" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <ExtensionList>
        <Extension Id="com.timo.aeinpaint.panel" Version="1.0.0" />
    </ExtensionList>

    <ExecutionEnvironment>
        <HostList>
            <!-- After Effects 2024+ (24.0+) -->
            <Host Name="AEFT" Version="[24.0,99.9]" />
        </HostList>

        <LocaleList>
            <Locale Code="All" />
        </LocaleList>

        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="11.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.timo.aeinpaint.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/host.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>

                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>

                <UI>
                    <Type>Panel</Type>
                    <Menu>AE Inpaint</Menu>

                    <Geometry>
                        <Size>
                            <Height>400</Height>
                            <Width>280</Width>
                        </Size>
                        <MinSize>
                            <Height>300</Height>
                            <Width>250</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>800</Height>
                            <Width>400</Width>
                        </MaxSize>
                    </Geometry>

                    <Icons>
                        <Icon Type="Normal">./icons/icon.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
